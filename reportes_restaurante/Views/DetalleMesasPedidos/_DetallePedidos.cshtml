<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
@{
    ViewData["Title"] = "Detalle pedidos";
}

<div class="mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <section class="mt-3">
            <div class="form-check form-switch ms-0 ps-0">
                <p class="form-check-label ps-0 mb-0  mt-2" for="flexSwitchCheckDefault">Pedidos en linea</p>
                <input class="form-check-input ms-4 fs-4" type="checkbox" id="flexSwitchCheckDefault">
            </div>
        </section>
        <section>
            <button id="1" value="Abierta" class="btn-cuenta bg-light btn btn-secondary text-black">ABIERTA</button>
            <div id="circulo-1" class="estado-circulo bg-dark rounded-circle mt-3 mx-auto" style="width: 30px; height: 30px;"></div>
        </section>
        <section>
            <button id="2" value="Cerrada" class="btn-cuenta bg-light btn btn-secondary text-black">CERRADA</button>
            <div id="circulo-2" class="estado-circulo bg-light rounded-circle mt-3 mx-auto" style="width: 30px; height: 30px;"></div>
        </section>
        <section>
            <button id="3" value="Todos" class="btn-cuenta bg-light btn btn-secondary text-black">TODOS</button>
            <div id="circulo-3" class="estado-circulo bg-light rounded-circle mt-3 mx-auto" style="width: 30px; height: 30px;"></div>
        </section>
    </div>
    <div class="d-flex justify-content-between mt-2">
        <div class="w-50">
            @foreach (var item in (IEnumerable<dynamic>)ViewBag.Pedido)
            {
                <section class="p-3 rounded mb-3 text-light" style="background-color: #003653">
                    <p class="my-0 fw-bold">MESA <span>@item.Mesa</span></p>
                    <p class="my-0 fw-bold">CLIENTE: <span>@item.Cliente</span></p>
                    <p class="my-0 fw-bold">CUENTA: <span>@item.Estado</span></p>
                    <p class="LblIdPedido my-0 fw-bold fst-italic" id="@item.Id" style="color: yellow; transition: color 0.3s;"
                       onmouseover="this.style.color='blue';"
                       onmouseout="this.style.color='yellow';">Detalles</p>
                </section>
            }
        </div>
        <div class="bg-light rounded p-3 pt-1 w-50 ms-3">
            <p class="text-end my-0"><i class="bi bi-x-circle-fill fs-4"></i></p>
            <p class="mt-0 text-center">MESA: <span id="NumMesa"></span></p>
            <p>CUENTA: <span id="EstadoCuenta"></span></p>
            <p>MESERO: <span id="NombreMesero"></span></p>
            <p>
                PLATOS:
                <div class="text-center" id="DetPedidoPlatos">
                </div>
            </p>
            <p>
                COMBOS:
                <div class="text-center" id="DetPedidoCombos">
                </div>
            </p>
            <p>TOTAL: <span id="TotalCuenta">$0</span></p>
        </div>
    </div>
</div>
